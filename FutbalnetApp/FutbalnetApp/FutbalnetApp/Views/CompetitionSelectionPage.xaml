<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:tabs="clr-namespace:Sharpnado.Presentation.Forms.CustomViews.Tabs;assembly=Sharpnado.Presentation.Forms"
             xmlns:tabs2="clr-namespace:FutbalnetApp.Controls"
             xmlns:views="clr-namespace:FutbalnetApp.Views"
             mc:Ignorable="d"
             Title="Súťaže"
             x:Class="FutbalnetApp.Views.CompetitionSelectionPage">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource MainLayout}">
            <tabs2:SegmentView x:Name="competitionSelector"
                               TintColor="{DynamicResource HighlightColor}"
                               BackgroundColor="{DynamicResource AlternativeColor}"
                               TextColor="{DynamicResource TextColor}"
                               SelectedTextColor="White"
                               SelectedIndex="{Binding SelectedCompetitionIndex, Mode=TwoWay}">
                <tabs2:SegmentView.Children>
                    <tabs2:Segment Title="Súťaže"/>
                    <tabs2:Segment Title="Podzväzy"/>
                </tabs2:SegmentView.Children>
            </tabs2:SegmentView>
            <tabs2:SegmentView TintColor="{DynamicResource HighlightColor}"
                               BackgroundColor="{DynamicResource AlternativeColor}"
                               TextColor="{DynamicResource TextColor}"
                               SelectedTextColor="White"
                               SelectedIndex="{Binding SelectedCategoryIndex, Mode=TwoWay}"
                               IsVisible="false">
                <tabs2:SegmentView.Children>
                    <tabs2:Segment Title="Muži"/>
                    <tabs2:Segment Title="Ženy"/>
                    <tabs2:Segment Title="Mládež"/>
                </tabs2:SegmentView.Children>
                <tabs2:SegmentView.Triggers>
                    <DataTrigger TargetType="tabs2:SegmentView" Binding="{Binding SelectedCompetitionIndex}" Value="0">
                        <Setter Property="IsVisible" Value="True"/>
                    </DataTrigger>
                </tabs2:SegmentView.Triggers>
            </tabs2:SegmentView>
            <CollectionView x:Name="MCompsList"
                            IsVisible="false"
                                        ItemTemplate="{StaticResource ListItemSecondary}"
                                        Style="{StaticResource BaseCollectionView}"
                                        ItemsSource="{Binding MenCompetitions}"
                                        EmptyView="Žiadne súťaže v tejto kategórii"
                                        SelectionChanged="OnCompetitionSelected">
                <CollectionView.Triggers>
                    <MultiTrigger TargetType="CollectionView">
                        <MultiTrigger.Conditions>
                            <BindingCondition Binding="{Binding SelectedCategoryIndex}" Value="0"/>
                            <BindingCondition Binding="{Binding SelectedCompetitionIndex}" Value="0"/>
                        </MultiTrigger.Conditions>
                        <Setter Property="IsVisible" Value="True"/>
                    </MultiTrigger>
                </CollectionView.Triggers>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="3"/>
                </CollectionView.ItemsLayout>
            </CollectionView>
            <CollectionView x:Name="WCompsList"
                            IsVisible="false"
                                        ItemTemplate="{StaticResource ListItemSecondary}"
                                        ItemsSource="{Binding WomenCompetitions}"
                                        SelectionChanged="OnCompetitionSelected"
                                        EmptyView="Žiadne súťaže v tejto kategórii"
                                        Style="{StaticResource BaseCollectionView}">
                <CollectionView.Triggers>
                    <MultiTrigger TargetType="CollectionView">
                        <MultiTrigger.Conditions>
                            <BindingCondition Binding="{Binding SelectedCategoryIndex}" Value="1"/>
                            <BindingCondition Binding="{Binding SelectedCompetitionIndex}" Value="0"/>
                        </MultiTrigger.Conditions>
                        <Setter Property="IsVisible" Value="True"/>
                    </MultiTrigger>
                </CollectionView.Triggers>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="3"/>
                </CollectionView.ItemsLayout>
            </CollectionView>
            <CollectionView x:Name="YCompsList"
                            IsVisible="false"
                                        ItemTemplate="{StaticResource ListItemSecondary}"
                                        Style="{StaticResource BaseCollectionView}"
                                        ItemsSource="{Binding YoungCompetitions}"
                                        EmptyView="Žiadne súťaže v tejto kategórii"
                                        SelectionChanged="OnCompetitionSelected">
                <CollectionView.Triggers>
                    <MultiTrigger TargetType="CollectionView">
                        <MultiTrigger.Conditions>
                            <BindingCondition Binding="{Binding SelectedCategoryIndex}" Value="2"/>
                            <BindingCondition Binding="{Binding SelectedCompetitionIndex}" Value="0"/>
                        </MultiTrigger.Conditions>
                        <Setter Property="IsVisible" Value="True"/>
                    </MultiTrigger>
                </CollectionView.Triggers>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="3"/>
                </CollectionView.ItemsLayout>
            </CollectionView>
            <CollectionView x:Name="UnionList"
                            IsVisible="false"
                                Margin="0,10,0,0"
                                ItemTemplate="{StaticResource ListItemSecondary}"
                                ItemsSource="{Binding SubUnions}"
                                Style="{StaticResource BaseCollectionView}"
                                SelectionChanged="UnionList_SelectionChanged">
                <CollectionView.Triggers>
                    <DataTrigger TargetType="CollectionView" Binding="{Binding SelectedCompetitionIndex}" Value="1">
                        <Setter Property="IsVisible" Value="True"/>
                    </DataTrigger>
                </CollectionView.Triggers>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="3"/>
                </CollectionView.ItemsLayout>
            </CollectionView>

